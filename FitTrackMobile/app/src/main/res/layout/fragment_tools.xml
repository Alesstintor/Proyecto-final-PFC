<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tools.ToolsFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/rm_calculator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_exposure_96"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/water_calculator_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/calories_calculator_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rm_calculator_label"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/rm_calculator_button"
        app:layout_constraintStart_toStartOf="@id/rm_calculator_button"
        app:layout_constraintEnd_toEndOf="@id/rm_calculator_button"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/calories_calculator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_flatware_96"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/water_calculator_button"
        app:layout_constraintStart_toEndOf="@id/rm_calculator_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calories_calculator_button_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/calories_calculator_button"
        app:layout_constraintStart_toStartOf="@id/calories_calculator_button"
        app:layout_constraintEnd_toEndOf="@id/calories_calculator_button"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/water_calculator_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_water_drop_96"
        android:layout_marginBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/rm_calculator_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/water_register_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_calculator_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/water_calculator_button"
        app:layout_constraintStart_toStartOf="@id/water_calculator_button"
        app:layout_constraintEnd_toEndOf="@id/water_calculator_button"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/water_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_local_drink_96"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toEndOf="@id/water_calculator_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calories_calculator_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/water_register_text"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/water_register_button"
        app:layout_constraintStart_toStartOf="@id/water_register_button"
        app:layout_constraintEnd_toEndOf="@id/water_register_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>